<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <section class="hero is-primary is-medium">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <img src="https://images.app.goo.gl/5oxVBgYFCnVqNCtR9" alt="Logo">
          </a>
          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
        <div id="navbarMenuHeroA" class="navbar-menu">
          <div class="navbar-end">
               <%= link_to 'Home', pages_home_path, class: "navbar-item"  %>
               <%= link_to 'About', pages_about_path, class: "navbar-item"  %>
               <%= link_to 'Contact', pages_contact_path, class: "navbar-item"  %>
               <%= link_to 'Portfolio', pages_portfolio_path, class: "navbar-item"  %>
            <span class="navbar-item">
                <span> <%= link_to 'Create Article', new_article_path, class: "button is-info is-outlined"%></span>
            </span>
          </div>
        </div>
      </div>
    </nav>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= yield :page_title%>
      </h1>
    </div>
  </div>
</section>
   
 
<div>
  <%= yield%>
</div>
     
     
  </body>
</html>
